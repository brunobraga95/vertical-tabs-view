{
  "name": "Vertical Tabs Side Panel",
  "version": "0.0.9.6",
  "manifest_version": 3,
  "action": {
    "default_title": "Vertical Tabs Side Panel"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": ["storage", "tabs", "sidePanel"],
  "optional_permissions": ["tabGroups"],
  "icons": {
    "16": "verticaltabsview16.png",
    "48": "verticaltabsview48.png",
    "128": "verticaltabsview128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E",
        "windows": "Ctrl+I",
        "linux": "Ctrl+Q"
      },
      "description": "Opens the extension popup."
    }
  }
}
